<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:fillViewport="true"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".YourActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        app:cardElevation="12dp"
        app:cardCornerRadius="40dp"
        android:backgroundTint="#208B8A57">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="2dp"
                android:text="@string/admin_dashboard"
                android:textColor="#408B8A57"
                android:textSize="30sp"
                android:textStyle="bold" />

            <!-- Sub-Card for Apartment Complex Management -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="30dp"
                android:backgroundTint="#408B8A57">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="@string/apartment_estate_management"
                        android:drawableStart="@android:drawable/ic_menu_view"
                        tools:ignore="ImageContrastCheck" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/apartment_estate_management"
                        android:textSize="12sp"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:textColor="#FFFFFF"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        style="@style/CustomButtonStyle"
                        android:onClick="onApartmentEstateManageClick"
                        android:text="@string/manage"
                        android:textSize="12sp"
                        android:textColor="#212121"
                        tools:ignore="DuplicateSpeakableTextCheck" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>






            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="30dp"
                android:backgroundTint="#408B8A57">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="@string/apartment_complex_management"
                        android:drawableStart="@android:drawable/ic_menu_view"
                        tools:ignore="ImageContrastCheck" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/apartment_complex_management"
                        android:textSize="12sp"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:textColor="#FFFFFF"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        style="@style/CustomButtonStyle"
                        android:onClick="onApartmentComplexManageClick"
                        android:text="@string/manage"
                        android:textSize="12sp"
                        android:textColor="#212121"
                        tools:ignore="DuplicateSpeakableTextCheck" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>





            <!-- Sub-Card for Apartment Management -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="30dp"
                android:backgroundTint="#408B8A57">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="@string/apartment_management"
                        android:drawableStart="@android:drawable/ic_menu_info_details"
                        tools:ignore="ImageContrastCheck" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/apartment_management"
                        android:textSize="12sp"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:textColor="#FFFFFF"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        style="@style/CustomButtonStyle"
                        android:onClick="onApartmentManageClick"
                        android:textSize="12sp"
                        android:text="@string/manage"
                        android:textColor="#212121" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Sub-Card for Tenant Management -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="30dp"
                android:backgroundTint="#408B8A57">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="@string/tenant_management"
                        android:drawableStart="@android:drawable/ic_menu_view"
                        tools:ignore="ImageContrastCheck" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/tenant_management"
                        android:textSize="12sp"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:textColor="#FFFFFF"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        style="@style/CustomButtonStyle"
                        android:onClick="onTenantManageClick"
                        android:textSize="12sp"
                        android:text="@string/manage"
                        android:textColor="#212121" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!-- Sub-Card for alliances -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="30dp"
                android:backgroundTint="#408B8A57">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="@string/alliances"
                        android:drawableStart="@android:drawable/ic_menu_view"
                        tools:ignore="ImageContrastCheck" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/alliances"
                        android:textSize="12sp"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:textColor="#FFFFFF"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        style="@style/CustomButtonStyle"
                        android:onClick="onAppliancesManageClick"
                        android:textSize="12sp"
                        android:text="@string/manage"
                        android:textColor="#212121" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Sub-Card for Rent Payment Management -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="30dp"
                android:backgroundTint="#408B8A57">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="@string/rent_payment_management"
                        android:drawableStart="@android:drawable/ic_menu_add"
                        tools:ignore="ImageContrastCheck,ImageContrastCheck" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/rent_payment_management"
                        android:textSize="12sp"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:textColor="#FFFFFF"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        style="@style/CustomButtonStyle"
                        android:onClick="onRentPaymentManageClick"
                        android:textSize="12sp"
                        android:text="@string/manage"
                        android:textColor="#212121" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Sub-Card for Maintenance Request Management -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="30dp"
                android:backgroundTint="#408B8A57">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="@string/maintenance_request_management"
                        android:drawableStart="@android:drawable/ic_menu_edit"
                        tools:ignore="ImageContrastCheck" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/maintenance_request_management"
                        android:textSize="12sp"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:textColor="#FFFFFF"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        style="@style/CustomButtonStyle"
                        android:onClick="onMaintenanceRequestManageClick"
                        android:textSize="12sp"
                        android:text="@string/manage"
                        android:textColor="#212121" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Sub-Card for User Management -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="30dp"
                android:backgroundTint="#408B8A57">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="@string/user_management"
                        android:drawableStart="@android:drawable/ic_menu_search"
                        tools:ignore="ImageContrastCheck" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/user_management"
                        android:textSize="12sp"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:textColor="#FFFFFF"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        style="@style/CustomButtonStyle"
                        android:onClick="onUserManageClick"
                        android:textSize="12sp"
                        android:text="@string/manage"
                        android:textColor="#212121" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Sub-Card for Lease Agreement Management -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="30dp"
                android:backgroundTint="#408B8A57">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="@string/lease_agreement_management"
                        android:drawableStart="@android:drawable/ic_menu_preferences"
                        tools:ignore="VisualLintBounds,ImageContrastCheck" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/lease_agreement_management"
                        android:textSize="12sp"
                        android:padding="10dp"
                        android:textColor="#FFFFFF"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        style="@style/CustomButtonStyle"
                        android:onClick="onLeaseAgreementManageClick"
                        android:text="@string/manage"
                        android:textColor="#212121"
                        android:textSize="12sp"
                        tools:ignore="TextContrastCheck" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Sub-Card for Lease Termination Requests -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="30dp"
                android:backgroundTint="#408B8A57">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="@string/lease_termination_requests"
                        android:drawableStart="@android:drawable/ic_menu_share"
                        tools:ignore="VisualLintBounds,ImageContrastCheck" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:text="@string/lease_termination_requests"
                        android:textColor="#8D6E63"
                        android:textSize="12sp"
                        tools:ignore="VisualLintBounds,TextContrastCheck" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        style="@style/CustomButtonStyle"
                        android:onClick="onLeaseTerminationManageClick"
                        android:text="@string/manage"
                        android:textColor="#212121"
                        android:textSize="12sp"
                        tools:ignore="VisualLintBounds" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Sub-Card for Reports and Analytics -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="30dp"
                android:backgroundTint="#408B8A57">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="@string/reports_and_analytics"
                        android:drawableStart="@android:drawable/ic_menu_close_clear_cancel"
                        tools:ignore="VisualLintBounds,ImageContrastCheck" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/reports_and_analytics"
                        android:textSize="12sp"
                        android:padding="10dp"
                        android:layout_gravity="center"
                        android:textColor="#FFFFFF"
                        tools:ignore="VisualLintBounds" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        style="@style/CustomButtonStyle"
                        android:onClick="onReportsManageClick"
                        android:text="@string/view"
                        android:textSize="12sp"
                        android:textColor="#212121"
                        tools:ignore="VisualLintBounds" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Sub-Card for Settings -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="30dp"
                android:backgroundTint="#408B8A57">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="@string/settings"
                        android:drawableStart="@android:drawable/ic_menu_send"
                        tools:ignore="VisualLintBounds,ImageContrastCheck" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/settings"
                        android:textSize="12sp"
                        android:padding="10dp"
                        android:layout_gravity="center"
                        android:textColor="#FFFFFF"
                        tools:ignore="VisualLintBounds" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        style="@style/CustomButtonStyle"
                        android:onClick="onSettingsManageClick"
                        android:text="@string/manage"
                        android:textColor="#9E9D24"
                        android:textSize="12sp"
                        tools:ignore="VisualLintBounds,TouchTargetSizeCheck,TextContrastCheck" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>