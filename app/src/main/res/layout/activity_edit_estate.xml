<!-- res/layout/activity_edit_estate.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Page Title -->
    <TextView
        android:id="@+id/pageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit_estate_title"
    android:textSize="24sp"
    android:textColor="#000000"
    android:layout_marginBottom="16dp"
    android:layout_gravity="center" />

    <!-- Main Card for the Edit Estate Form -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        android:backgroundTint="#608B8A57"
        app:cardElevation="4dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/estateNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:autofillHints="enter estateName"
                android:hint="@string/estate_name"
                android:inputType="text"
                android:minHeight="48dp"
                android:textColorHint="#FB8C00"
                tools:ignore="VisualLintTextFieldSize" />

            <Button
                android:id="@+id/saveButton"
                android:layout_width="match_parent"
                style="@style/CustomButtonStyle"
                android:layout_height="wrap_content"
                android:text="@string/save_changes"
                android:layout_gravity="center" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
